# OpenTrustGroup specific configs
import("//build/otg/config.gni")

declare_args() {
  # The absolute path of the sysroot that is used with the target toolchain.
  target_sysroot = ""
}

if (current_os == target_os && target_sysroot != "") {
  sysroot = target_sysroot
} else if (is_fuchsia) {
  if (current_cpu == "x64") {
    _zircon_cpu = "x86-64"
  } else {
    _zircon_cpu = current_cpu
  }
  sysroot = rebase_path("//out/build-zircon/build-${zircon_user_project_prefix}user-${_zircon_cpu}/sysroot")
} else if (is_linux) {
  sysroot = rebase_path("//buildtools/${host_platform}/sysroot")
} else if (is_mac) {
  import("//build/config/mac/config.gni")
  sysroot = mac_sdk_path
} else {
  sysroot = ""
}
